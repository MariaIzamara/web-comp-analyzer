{
  "name": "web-comp-analyzer",
  "displayName": "Web Components Analyzer",
  "description": "A plugin for vscode to view your web components dependency graph",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "web-comp-analyzer-explorer",
          "title": "Explorer",
          "icon": "assets/tree.svg"
        }
      ]
    },
    "views": {
      "web-comp-analyzer-explorer": [
          {
            "id": "componentTree",
            "name": "Component Tree"
          }
      ]
    },
    "commands": [
      {
        "command": "web-comp-analyzer-explorer.helloWorld",
        "title": "Mensagem de Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
